
<p class="text-green-500"><%= notice %></p>

<h1>Issues</h1>

<div id="issues" class="relative overflow-x-auto shadow-md sm:rounded-lg">
    <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="px-6 py-3">
                    Title
                </th>
                <th scope="col" class="px-6 py-3">
                    Priority
                </th>
                <th scope="col" class="px-6 py-3">
                    Assignee
                </th>
                <th scope="col" class="px-6 py-3">
                    Status
                </th>
                <th scope="col" class="px-6 py-3">
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
        <% @issues.each_with_index do |issue| %>
      <tr class="odd:bg-white odd:dark:bg-gray-900 even:bg-gray-50 even:dark:bg-gray-800 border-b dark:border-gray-700">
            <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                <%= issue.title %>
            </th>
            <td class="px-6 py-4">
            <%= issue.priority %>
            </td>
            <td class="px-6 py-4">
            <%= issue.assignee %>
            </td>
            <td class="px-6 py-4">
            <%= issue.status %>
            </td>
            <td class="px-6 py-4">
                <a class="font-medium text-blue-600 dark:text-blue-500 hover:underline">Edit</a>
            </td>
        </tr>
      
        <% end %>
    </tbody>
</table>
</div>

<%= link_to "New issue", new_issue_path %>
