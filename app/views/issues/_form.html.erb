<%= form_with(model: issue) do |form| %>
  <% if issue.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(issue.errors.count, "error") %> prohibited this issue from being saved:</h2>

      <ul>
        <% issue.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.rich_text_area :description %>
  </div>

  <div>
    <%= form.label :priority, style: "display: block" %>
    <%= form.select :priority, options_for_select(['Low', 'Medium', 'Urgent']) %>
  </div>

  <div>
    <%= form.label :assignee, style: "display: block" %>
    <%= form.text_field :assignee %>
  </div>

  <div>
    <%= form.label :status, style: "display: block" %>
    <%= form.select :status, options_for_select(['Open', 'In Progress', 'Completed']) %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
